<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AuthTheme" parent="AppTheme">
<!--        <item name="android:background">@color/gray_porcelain</item>
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/indigo_500</item>-->
    </style>

    <style name="InputEditText" parent="FullWidth">
        <item name="android:gravity">start</item>
        <item name="android:padding">@dimen/small</item>
        <item name="android:background">@color/primary_background</item>
    </style>

    <style name="InputEditText.Title">
        <item name="android:textSize">20sp</item>
        <item name="fontPath">fonts/roboto_medium.ttf</item>
    </style>

    <style name="InputEditText.Content">
        <item name="android:layout_height">match_parent</item>
        <item name="fontPath">fonts/roboto_light.ttf</item>
        <item name="android:textSize">18sp</item>

    </style>

    <style name="SideMenuElement" parent="FullWidth">
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/gray_side_menu_item_gfx</item>
        <item name="android:layout_marginBottom">@dimen/tiny</item>
        <item name="android:paddingStart">@dimen/normal</item>
        <item name="android:paddingEnd">@dimen/normal</item>
        <item name="text1Size">24sp</item>
        <item name="android:minHeight">@dimen/big</item>
        <item name="text1Gravity">center</item>
        <item name="text1MinWidth">@dimen/middle</item>
        <item name="text2Size">18sp</item>
        <item name="text1TypeFace">ionicons</item>
        <item name="text2TypeFace">roboto_regular</item>
        <item name="text2MarginLeft">@dimen/normal</item>
    </style>

    <style name="Login" parent="FullWidth">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Login.EditText">
    </style>

    <style name="Login.Button">
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/indigo_round_corners_gfx</item>
        <item name="android:layout_marginTop">@dimen/small</item>
    </style>

</resources>
